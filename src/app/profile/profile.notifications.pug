include ../template/_mixins

h1 Releases
hr
.row
	.col-lg-11.col-xs-10
		label(for="notifyReleaseModerationStatus") Notify when my release upload gets approved or refused
	.col-lg-1.col-xs-2
		input#notifyReleaseModerationStatus.checkbox--toggle(type="checkbox", ng-model="vm.updatedPreferences.notify_release_moderation_status")
		label.a.a--light.padder-bottom(for="notifyReleaseModerationStatus")
	.clearfix

	.col-lg-11.col-xs-10
		label(for="notifyReleaseValidationStatus") Notify when one of my files gets verified or marked as broken
	.col-lg-1.col-xs-2
		input#notifyReleaseValidationStatus.checkbox--toggle(type="checkbox", ng-model="vm.updatedPreferences.notify_release_validation_status")
		label.a.a--light.padder-bottom(for="notifyReleaseValidationStatus")
	.clearfix

	.col-lg-11.col-xs-10
		label(for="notifyReleaseComments") Notify when one of my releases gets commented
	.col-lg-1.col-xs-2
		input#notifyReleaseComments.checkbox--toggle(type="checkbox", ng-model="vm.updatedPreferences.notify_created_release_comments")
		label.a.a--light.padder-bottom(for="notifyReleaseComments")
	.clearfix

h1 Direct B2S Backglasses
hr
.row
	.col-lg-11.col-xs-10
		label(for="notifyBackglassModerationStatus") Notify when my backglass upload gets approved or refused
	.col-lg-1.col-xs-2
		input#notifyBackglassModerationStatus.checkbox--toggle(type="checkbox", ng-model="vm.updatedPreferences.notify_backglass_moderation_status")
		label.a.a--light.padder-bottom(for="notifyBackglassModerationStatus")
	.clearfix

h1 Games
hr
.row
	.col-lg-11.col-xs-10
		label(for="notifyGameRequestStatus") Notify about my game request updates
	.col-lg-1.col-xs-2
		input#notifyGameRequestStatus.checkbox--toggle(type="checkbox", ng-model="vm.updatedPreferences.notify_game_requests")
		label.a.a--light.padder-bottom(for="notifyGameRequestStatus")
	.clearfix

div(ng-show="vm.AuthService.hasPermission('games/add')")
	h1 Contribution
	hr
	.row(ng-show="vm.AuthService.hasPermission('releases/moderate')")
		.col-lg-11.col-xs-10
			label(for="contributorNotifyGameRequestCreated") Notify when a new game request is created
		.col-lg-1.col-xs-2
			input#contributorNotifyGameRequestCreated.checkbox--toggle(type="checkbox", ng-model="vm.updatedPreferences.contributor_notify_game_request_created")
			label.a.a--light.padder-bottom(for="contributorNotifyGameRequestCreated")
		.clearfix

div(ng-show="vm.AuthService.hasPermission('releases/moderate') || vm.AuthService.hasPermission('backglasses/moderate')")
	h1 Moderation
	hr
	.row(ng-show="vm.AuthService.hasPermission('releases/moderate')")
		.col-lg-11.col-xs-10
			label(for="moderatorNotifyReleaseSubmitted") Notify when a submitted release needs approval
		.col-lg-1.col-xs-2
			input#moderatorNotifyReleaseSubmitted.checkbox--toggle(type="checkbox", ng-model="vm.updatedPreferences.moderator_notify_release_submitted")
			label.a.a--light.padder-bottom(for="moderatorNotifyReleaseSubmitted")
		.clearfix
	.row(ng-show="vm.AuthService.hasPermission('releases/moderate')")
		.col-lg-11.col-xs-10
			label(for="moderatorNotifyReleaseAutoApproved") Notify when a submitted release was auto-approved
		.col-lg-1.col-xs-2
			input#moderatorNotifyReleaseAutoApproved.checkbox--toggle(type="checkbox", ng-model="vm.updatedPreferences.moderator_notify_release_auto_approved")
			label.a.a--light.padder-bottom(for="moderatorNotifyReleaseAutoApproved")
		.clearfix
	.row(ng-show="vm.AuthService.hasPermission('releases/moderate')")
		.col-lg-11.col-xs-10
			label(for="moderatorNotifyReleaseCommented") Notify when a moderation comment on a release was created
		.col-lg-1.col-xs-2
			input#moderatorNotifyReleaseCommented.checkbox--toggle(type="checkbox", ng-model="vm.updatedPreferences.moderator_notify_release_commented")
			label.a.a--light.padder-bottom(for="moderatorNotifyReleaseCommented")
		.clearfix
	.row(ng-show="vm.AuthService.hasPermission('releases/moderate')")
		.col-lg-11.col-xs-10
			label(for="moderatorNotifyBackglassSubmitted") Notify when a submitted backglass needs approval
		.col-lg-1.col-xs-2
			input#moderatorNotifyBackglassSubmitted.checkbox--toggle(type="checkbox", ng-model="vm.updatedPreferences.moderator_notify_backglass_submitted")
			label.a.a--light.padder-bottom(for="moderatorNotifyBackglassSubmitted")
		.clearfix
	.row(ng-show="vm.AuthService.hasPermission('releases/moderate')")
		.col-lg-11.col-xs-10
			label(for="moderatorNotifyBackglassAutoApproved") Notify when a submitted backglass was auto-approved
		.col-lg-1.col-xs-2
			input#moderatorNotifyBackglassAutoApproved.checkbox--toggle(type="checkbox", ng-model="vm.updatedPreferences.moderator_notify_backglass_auto_approved")
			label.a.a--light.padder-bottom(for="moderatorNotifyBackglassAutoApproved")
		.clearfix

p.padder-top-2x
button.btn.btn-primary.pull-right(ng-click="vm.updateUserPreferences()")
	+icon('check-circle').space-right
	| Save

.clearfix