include ../template/_mixins

.theme-light
	.modal-header
		h1.h--no-margin.h--small
			+icon('tags').space-right
			| &nbsp;Create A New Tag
	.modal-body
		p Tags need a unique name and a description.
		form.form-horizontal(role="form")

			.form-group(ng-class="{ error: vm.errors.name }")
				label.col-sm-3.control-label Name
				.col-sm-7
					input#tag-name.form-control(ng-model="vm.tag.name", ng-required)
			div.alert.alert-danger.padder-bottom(ng-show="vm.errors.name")
				+icon('warning').shift-up.space-right
				| {{ vm.errors.name }}

			.form-group(ng-class="{ error: vm.errors.description }")
				label.col-sm-3.control-label Description
				.col-sm-7
					textarea#tag-description.form-control(ng-model="vm.tag.description", ng-required)
			div.alert.alert-danger(ng-show="vm.errors.description")
				+icon('warning').shift-up.space-right
				| {{ vm.errors.description }}

	.modal-footer
		button#cancel-btn.btn.btn-default(ng-click="$dismiss()") Cancel
		button#submit-btn.btn.btn--secondary(ng-click="vm.create()") Create
