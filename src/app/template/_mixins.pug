mixin icon(ref)
	svg.svg-icon(id!=attributes.id, class!=attributes.class, ng-click!=attributes['ng-click'], ng-show!=attributes['ng-show'],
			ng-hide!=attributes['ng-hide'], ng-class!=attributes['ng-class'],
			uib-tooltip!=attributes['uib-tooltip'], tooltip-append-to-body!=attributes['tooltip-append-to-body'],
			tooltip-trigger!=attributes['tooltip-trigger'], tooltip-popup-delay!=attributes['tooltip-popup-delay']
	)
		if ref[0] === "{"
			use(xlink:href=`{{ ${ref.match(/^\{\{\s*(.*?)\s*\}\}$/)[1]} | sprite }}`)
		else
			use(xlink:href=`#${ref}`)

mixin paginator(pagination, paginate, num)
	span(ng-show=`${pagination}.links.first`, ng-click=`${paginate}(${pagination}.links.first)`): +icon('angle-left-skip').shift-up.smaller.a.a--lighter
	span.space-left(ng-show=`${pagination}.links.prev`, ng-click=`${paginate}(${pagination}.links.prev)`): +icon('angle-left').shift-up.smaller.a.a--lighter
	span.small.space-left PAGE &nbsp; {{ !{pagination}.page }} / {{ !{pagination}.pageCount }}
	span.space-left(ng-show=`${pagination}.links.next`, ng-click=`${paginate}(${pagination}.links.next)`): +icon('angle-right').shift-up.smaller.a.a--lighter
	span.space-left(ng-show=`${pagination}.links.last`, ng-click=`${paginate}(${pagination}.links.last)`): +icon('angle-right-skip').shift-up.smaller.a.a--lighter
