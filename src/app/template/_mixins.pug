mixin icon(ref)
	svg.svg-icon(id!=attributes.id, class!=attributes.class, ng-click!=attributes['ng-click'], ng-show!=attributes['ng-show'],
			ng-hide!=attributes['ng-hide'], ng-class!=attributes['ng-class'],
			uib-tooltip!=attributes['uib-tooltip'], tooltip-append-to-body!=attributes['tooltip-append-to-body'],
			tooltip-trigger!=attributes['tooltip-trigger'], tooltip-popup-delay!=attributes['tooltip-popup-delay']
	)
		if ref[0] === "{"
			use(xlink:href=`{{ ${ref.match(/^\{\{\s*(.*?)\s*\}\}$/)[1]} | sprite }}`)
		else
			use(xlink:href=`#${ref}`)

mixin paginator(pagination, paginate, num)
	span(ng-show=`${pagination}.links.first`, ng-click=`${paginate}(${pagination}.links.first)`): +icon('angle-left-skip').shift-up-less.smaller.a.a--lighter
	span.space-left(ng-show=`${pagination}.links.prev`, ng-click=`${paginate}(${pagination}.links.prev)`): +icon('angle-left').shift-up-less.smaller.a.a--lighter
	span.small.space-left.shift-up PAGE &nbsp; {{ !{pagination}.page }} / {{ !{pagination}.pageCount }}
	span.space-left(ng-show=`${pagination}.links.next`, ng-click=`${paginate}(${pagination}.links.next)`): +icon('angle-right').shift-up-less.smaller.a.a--lighter
	span.space-left(ng-show=`${pagination}.links.last`, ng-click=`${paginate}(${pagination}.links.last)`): +icon('angle-right-skip').shift-up-less.smaller.a.a--lighter

mixin loading(ngif)
	loading#loading(ng-if=ngif)
		div.logo
			.top
				svg.svg-icon(style='height:88px;width:88px;top:6px;left:6px;'): use(xlink:href='#vpdb')
				svg.svg-icon(style='height:100px;width:100px;animation:loading-spinner 2s linear infinite;'): use(xlink:href='#vpdb-notch')
			.bottom
				svg.svg-icon(style='height:40px;width:40px;position:relative;left:11px'): use(xlink:href='#logo-vp')
				svg.svg-icon(style='height:40px;width:40px;position:relative;left:6px'): use(xlink:href='#logo-db')